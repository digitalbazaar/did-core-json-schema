        {
          "type": "string"
        },
        {
          "type": "array",
          "items": [
            {
              "type": "string"
            }
          ]
        }
      ]
    },
    "controller": {
      "description": "A string or a set of strings that conform to the rules in 3.1 DID Syntax.",
